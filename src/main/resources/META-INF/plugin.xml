        <action id="GetAtAction9"
                class="com.kuantuum.seeker.actions.GetAtPositionAction"
                text="Get File On Position 9"
                description="Gets the file from the list on position 9"/>

        <!-- Other actions -->
        <action id="ShowPopupAction"
                class="com.kuantuum.seeker.actions.ShowPopupAction"
                text="Show Popup" description="Shows a popup."/>

        <action id="NextFileAction"
                class="com.kuantuum.seeker.actions.NavigateFileAction"
                text="Next File"
                description="Move to the next file."/>

        <action id="PrevFileAction"
                class="com.kuantuum.seeker.actions.NavigateFileAction"
                text="Previous File" description="Move to the previous file."/>
    </actions>
</idea-plugin>